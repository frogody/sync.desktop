{
  "name": "sync-desktop",
  "version": "2.1.1",
  "description": "SYNC Desktop Companion - Activity tracker and AI assistant for app.isyncso.com",
  "main": "dist/main/index.js",
  "author": "iSyncSO",
  "license": "MIT",
  "private": true,
  "scripts": {
    "dev": "concurrently \"npm run dev:main\" \"npm run dev:renderer\"",
    "dev:main": "tsc -p tsconfig.main.json --watch",
    "dev:renderer": "vite",
    "build:swift": "bash scripts/build-swift-widget.sh",
    "build": "npm run build:swift && npm run build:main && npm run build:renderer",
    "build:main": "tsc -p tsconfig.main.json",
    "build:renderer": "vite build",
    "start": "electron .",
    "electron:dev": "wait-on tcp:5173 && electron .",
    "test": "vitest run --config vitest.config.ts",
    "test:watch": "vitest --config vitest.config.ts",
    "package": "electron-builder build --mac --win --publish never",
    "package:mac": "electron-builder build --mac --publish never",
    "package:win": "electron-builder build --win --publish never"
  },
  "dependencies": {
    "animejs": "^3.2.2",
    "better-sqlite3": "^11.7.0",
    "electron-store": "^8.2.0",
    "electron-updater": "^6.3.9",
    "get-windows": "^9.2.3",
    "keytar": "^7.9.0",
    "node-fetch": "^2.7.0",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "uuid": "^9.0.1"
  },
  "devDependencies": {
    "@electron/notarize": "^2.5.0",
    "@types/better-sqlite3": "^7.6.11",
    "@types/node": "^22.10.5",
    "@types/node-fetch": "^2.6.11",
    "@types/react": "^18.3.18",
    "@types/react-dom": "^18.3.5",
    "@types/uuid": "^9.0.8",
    "@vitejs/plugin-react": "^4.3.4",
    "autoprefixer": "^10.4.20",
    "concurrently": "^9.1.2",
    "electron": "^34.0.0",
    "electron-builder": "^25.1.8",
    "postcss": "^8.4.49",
    "tailwindcss": "^3.4.17",
    "typescript": "^5.7.3",
    "vite": "^6.0.7",
    "vitest": "^4.0.18",
    "wait-on": "^8.0.1"
  },
  "build": {
    "appId": "com.isyncso.sync-desktop",
    "productName": "SYNC Desktop",
    "directories": {
      "output": "release",
      "buildResources": "build"
    },
    "files": [
      "dist/**/*",
      "assets/**/*"
    ],
    "mac": {
      "target": [
        "dmg",
        "zip",
        "pkg"
      ],
      "icon": "assets/icons/icon.icns",
      "category": "public.app-category.productivity",
      "hardenedRuntime": true,
      "gatekeeperAssess": false,
      "entitlements": "entitlements.mac.plist",
      "entitlementsInherit": "entitlements.mac.plist",
      "artifactName": "SYNC.Desktop-${version}-${arch}.${ext}"
    },
    "afterSign": "scripts/notarize.js",
    "win": {
      "target": [
        "nsis",
        "portable"
      ],
      "icon": "assets/icons/icon.ico"
    },
    "nsis": {
      "oneClick": false,
      "perMachine": false,
      "allowToChangeInstallationDirectory": true
    },
    "protocols": {
      "name": "iSyncSO Protocol",
      "schemes": [
        "isyncso"
      ]
    },
    "publish": {
      "provider": "github",
      "owner": "frogody",
      "repo": "sync.desktop"
    }
  }
}
